@using ReportInfo = WebDesigner_Blazor_Custom.Data.ReportInfo

<div class="main-nav navbar">
    <div id="list-heading"> Select report</div>
    @if (ReportsList != null)
    {
        <ul id="reportsList" class="nav navbar-nav">
            @foreach (var report in ReportsList)
            {
                if(report.Temporary) { continue; }

                var reportId = report.Id;
                <li class="reportList_item @(CurrentReport == reportId ? "active" : "" )" @onclick="()=>OnClickCallback.InvokeAsync(reportId)">
                    <span>@report.Id</span>
                </li>
            }
        </ul>
    }
</div>

@code {
    [Parameter]
    public List<ReportInfo> ReportsList { get; set; }

    [Parameter]
    public string CurrentReport { get; set; }

    [Parameter]
    public EventCallback<string> OnClickCallback { get; set; }

}